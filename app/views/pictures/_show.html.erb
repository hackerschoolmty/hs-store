<% if user_signed_in? %>
  <%= form_for Picture.new, remote: true do |f| %>
    <%= f.hidden_field :picturable_type, value: picturable_type %>
    <%= f.hidden_field :picturable_id, value: picturable_id %>
    <%= f.file_field :image %>
    <br/>
    <%= f.submit "Add",  class: "btn btn-primary"  %>
  <% end %>
<% end %>

<br/>

<div id="pictures_section" class="row">
  <% pictures.each do |picture| %>
    <%= render 'products/picture_detail', picture: picture %>

  <% end %>
</div>
