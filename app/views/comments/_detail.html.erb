<blockquote>
  <p><%= comment.description %></p>
  <small>
    <cite>
      <%= comment.user.name %>
      <%= time_ago_in_words(comment.created_at) + " ago" %>
    </cite>
  </small>
  <%= link_to "Eliminar", comment_path(comment), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-xs btn-danger" %>
</blockquote>
